    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            setTimeout(() => {
                loader.style.opacity = '0';
                setTimeout(() => {
                    loader.style.display = 'none';
                }, 500);
            }, 500);
        });

        const faders = document.querySelectorAll('.fade-in');
        const appearOptions = {
            threshold: 0.2,
            rootMargin: "0px 0px -50px 0px"
        };
        const appearOnScroll = new IntersectionObserver(function(entries, appearOnScroll) {
            entries.forEach(entry => {
                if (!entry.isIntersecting) {
                    return;
                } else {
                    entry.target.classList.add('visible');
                    appearOnScroll.unobserve(entry.target);
                }
            });
        }, appearOptions);

        faders.forEach(fader => {
            appearOnScroll.observe(fader);
        });
        
        const animationSection = document.querySelector('.scroll-animation-section');
        const tire1 = document.getElementById('tire1');
        const tire2 = document.getElementById('tire2');
        const animationText = document.getElementById('animation-text');
        const roadLines = document.querySelectorAll('.road-line');

        const animationStates = [
            { text: "ТОЧНОСТЬ", progress: 0.25 },
            { text: "СКОРОСТЬ", progress: 0.5 },
            { text: "НАДЕЖНОСТЬ", progress: 0.75 },
            { text: "ICE WHEEL", progress: 1.0 }
        ];
        
        window.addEventListener('scroll', () => {
            const { top, height } = animationSection.getBoundingClientRect();
            const scrollableHeight = height - window.innerHeight;
            let scrollProgress = (-top) / scrollableHeight;
            scrollProgress = Math.max(0, Math.min(1, scrollProgress));

            if (top < window.innerHeight && top > -height) {
                const rotation = scrollProgress * 2000;
                const tire1X = -200 + scrollProgress * (window.innerWidth + 400);
                const tire1Y = Math.sin(scrollProgress * Math.PI * 2) * 50;
                
                const tire2X = window.innerWidth + 200 - scrollProgress * (window.innerWidth + 400);
                const tire2Y = Math.cos(scrollProgress * Math.PI * 2) * 80;
                
                tire1.style.opacity = Math.sin(scrollProgress * Math.PI);
                tire2.style.opacity = Math.sin(scrollProgress * Math.PI);
                
                tire1.style.transform = `translate(${tire1X}px, ${tire1Y}px) rotate(${rotation}deg) scale(${0.5 + Math.sin(scrollProgress * Math.PI)})`;
                tire2.style.transform = `translate(${tire2X}px, ${tire2Y}px) rotate(${-rotation}deg) scale(${0.5 + Math.sin(scrollProgress * Math.PI)})`;
                
                let currentState = animationStates[0];
                for (const state of animationStates) {
                    if (scrollProgress <= state.progress) {
                        currentState = state;
                        break;
                    }
                }
                if (animationText.innerText !== currentState.text) {
                     animationText.style.opacity = 0;
                     animationText.style.transform = 'translateY(50px)';
                     setTimeout(() => {
                        animationText.innerText = currentState.text;
                        animationText.style.opacity = 1;
                        animationText.style.transform = 'translateY(0)';
                     }, 300);
                }
            }
        });
        
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>

